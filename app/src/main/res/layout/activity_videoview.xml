<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videoView">

    <RelativeLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="267dp" />

        <ImageView
            android:id="@+id/full_screen_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/fullscreenicon"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player"
        android:layout_marginTop="10dp"
        android:paddingStart="23dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/likesicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/likes"
                android:button="@drawable/buttonshape"
                android:fontFamily="@font/poppins"
                android:onClick="classSelect" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/likesicon"
                android:paddingStart="5dp"
                android:text="0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/l1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/shareicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/whatsappshare"
                android:backgroundTint="#555"
                android:button="@drawable/buttonshape"
                android:fontFamily="@font/poppins"
                android:onClick="classSelect" />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shareicon"
                android:paddingStart="5dp"
                android:text="0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/l2"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/copylinkicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/share"
                android:backgroundTint="#555"
                android:button="@drawable/buttonshape"
                android:fontFamily="@font/poppins"
                android:onClick="classSelect" />

            <TextView
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/copylinkicon"
                android:paddingStart="8dp"
                android:text="0" />

        </RelativeLayout>

        <Button
            android:id="@+id/pdf"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#CA2222"
            android:text="DOWNLOAD PDF"
            android:textColor="#fff"
            android:textSize="10sp" />

    </RelativeLayout>


    <View
        android:id="@+id/lines2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/r1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lines2">

        <TextView
            android:id="@+id/recomded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/poppins"
            android:text="RECOMMENDED LECTURES"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/recomded"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

</RelativeLayout>