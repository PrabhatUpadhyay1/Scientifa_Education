<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff"
    tools:context=".Home">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/header"
        app:itemIconTint="#2196F3"
        app:menu="@menu/header_navigation_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_gravity="bottom"
            android:background="#18A0FB">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="45dp"
                android:layout_height="35.36dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:elevation="1dp"
                android:src="@drawable/zondicons_education" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/logo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/scientica"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/poppins"
                    android:text="@string/scientifica"
                    android:textColor="#fff"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scientica"
                    android:fontFamily="@font/poppins"
                    android:text="@string/education"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigation_bar"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rectangle_6"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/homeup">

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="35.36dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="13dp"
                            android:elevation="1dp"
                            android:src="@drawable/zondicons_education" />

                        <LinearLayout
                            android:layout_width="148dp"
                            android:layout_height="52dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/poppins"
                                android:text="@string/scientifica"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="@string/education"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="41.9dp"
                            android:layout_height="41.9dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10.55dp"
                            android:layout_marginEnd="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/download"
                            app:civ_border_color="#fff"
                            app:civ_border_width="2dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/search_view"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_below="@id/r1"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="33dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="21dp"
                        android:background="@drawable/buttonshape"
                        android:backgroundTint="#fff"
                        android:drawableStart="@drawable/ic_baseline_search_24"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:text="Search for Subjects, Books, Topics, PDFs..."
                        android:textColor="#5F5F5F"
                        android:textSize="13sp" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rectangle_6"
                    android:paddingTop="6dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/cardviewbackground2"
                        android:elevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/maths" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="@string/mathematics"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="9sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/cardviewbackground"
                        android:elevation="8dp"
                        android:paddingTop="2dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/chemistry" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Chemistry"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="9sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/cardviewbackground"
                        android:elevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/physics" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Physics"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="9sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/cardviewbackground"
                        android:elevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/whatsapp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Join Us"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="9sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:id="@+id/lines2"
                    android:layout_width="104dp"
                    android:layout_height="1.5dp"
                    android:layout_below="@id/l2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="#000" />

                <TextView
                    android:id="@+id/ask_doubts"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lines2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/ask_doubts"
                    android:textColor="#18A0FB"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/writedoubt"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_below="@id/ask_doubts"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bounded"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:hint="@string/write_your_doubts"
                    android:paddingStart="9dp"
                    android:paddingTop="6dp"
                    android:textColor="#000"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="116dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/writedoubt"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/buttonshape"
                    android:elevation="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Send"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/or"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/send"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="110dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/poppins"
                        android:text="or"
                        android:textAlignment="center"
                        android:textColor="#18A0FB"
                        android:textSize="27sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#000" />

                </LinearLayout>

                <Button
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/or"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/buttonshape1"
                    android:drawableStart="@drawable/upload"
                    android:drawableTint="#fff"
                    android:onClick="askDoubt"
                    android:elevation="10dp"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="90dp"
                    android:paddingEnd="80dp"
                    android:shadowColor="#000"
                    android:text="@string/upload_image"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/lines"
                    android:layout_width="104dp"
                    android:layout_height="1.5dp"
                    android:layout_below="@id/upload"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="#000" />

                <LinearLayout
                    android:id="@+id/p1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lines"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/popular_boo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:text="@string/popoluar_books"
                            android:textAppearance="@style/popular_boo" />

                        <TextView
                            android:id="@+id/see_all"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="end"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/book_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/p2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/p1"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ncert_solition"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:text="@string/ncert_video_solution"
                            android:textAppearance="@style/popular_boo" />

                        <TextView
                            android:id="@+id/see_all_1"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="end"
                            android:layout_marginStart="15dp"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ncert_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/p3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/p2"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/jee_solition"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:text="JEE Mains Video Solution"
                            android:textAppearance="@style/popular_boo" />

                        <TextView
                            android:id="@+id/see_all_2"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="end"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/jee_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/p4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/p3"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/jee_adv_solition"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:text="JEE Advance Solution"
                            android:textAppearance="@style/popular_boo" />

                        <TextView
                            android:id="@+id/see_all_3"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:gravity="end"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/jee_advance_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/p5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/p4"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pdf_solition"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:text="PDF Solution"
                            android:textAppearance="@style/popular_boo" />

                        <TextView
                            android:id="@+id/see_all_5"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="end"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pdf_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/p6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/p5"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="19dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/blog"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:text="Blogs"
                            android:textAppearance="@style/popular_boo" />

                        <TextView
                            android:id="@+id/see_all_6"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="end"
                            android:text="@string/see_all"
                            android:textAppearance="@style/see_all" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/blog_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#fff"
            android:elevation="4dp"
            android:textAlignment="center"
            app:itemIconSize="27dp"
            app:itemIconTint="@color/nav_item_selector"
            app:itemTextColor="@color/nav_item_text_color"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
